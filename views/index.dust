{>"layout" /}

{<body}
{#recipes}
  <div class='well'>
    <h4>{name}
    <button data-toggle="collapse" href="#recipe_{id}" aria-expanded="false" aria-controls="recipe_{id}" class="btn btn-default pull-right">
      <span class="glyphicon glyphicon-search" aria-hidden="true">
      </span>
    </button></h4>

    <div class="collapse" id="recipe_{id}">
      <br />
      <br />
      <p><strong>Ingredients: </strong>{ingredients}</p>
      <p><strong>Directions: </strong>{directions}</p>
      <br />
      <hr />
      <button class="btn btn-default edit-recipe></button>
    </div>
  </div>
{/recipes}
{/body}
